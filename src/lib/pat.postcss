@import "./styles/pre.postcss";
@import "./styles/code.postcss";
@import "./styles/kbd.postcss";

@tailwind base;
@tailwind components;
@tailwind utilities;

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html,
body {
    @apply w-full h-full overflow-auto;
}

body {
    background-color: hsl(var(--background));
    color: hsl(var(--foreground));
}
